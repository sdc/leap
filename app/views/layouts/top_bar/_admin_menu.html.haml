- if @user.admin? or @user.superuser?
  %li.dropdown
    %button.btn.navbar-btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown"}
      Admin
      %i.fa.fa-caret-down
    %ul.dropdown-menu
      %li.dropdown-header Settings
      - if @user.superuser?
        %li
          = link_to admin_settings_url do
            %i.fa.fa-cog.fa-fw
            Edit Settings
        %li
          = link_to admin_views_url do
            %i.fa.fa-th-list.fa-fw
            Setup Views
        %li
          = link_to admin_stats_url do
            %i.fa.fa-bar-chart-o.fa-fw
            Statistics
      %li
        = link_to admin_absences_url do
          %i.fa.fa-align-justify.fa-fw
          Absence Report  
      - if Rails.env == "development"
        %li
          = link_to admin_test_login_url, :title => "Click to change user" do
            %i.fa.fa-user.fa-fw
            Change User
      - if @topic.kind_of? Person
        %li.divider
        %li.dropdown-header
          Data for
          = @topic.name
        %li
          = link_to params.merge(:refresh => true).permit(:refresh) do
            %i.fa.fa-refresh.fa-fw
            Refresh from MIS
